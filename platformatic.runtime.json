{
  "$schema": "https://platformatic.dev/schemas/v1.10.0/runtime",
  "entrypoint": "media-service",
  "allowCycles": false,
  "hotReload": true,
  "autoload": {
    "path": "services",
    "exclude": [
      "docs"
    ]
  },
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "cors": {
      "origin": "https://platformatic.cloud",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    }
  }
}
